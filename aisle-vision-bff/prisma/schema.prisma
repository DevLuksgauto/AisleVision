enum NegotiationType {
  EXCLUSIVO
  NAO_EXCLUSIVO
  ACORDO
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Contact {
  id            String    @id @default(uuid())

  code          String    @unique
  name          String

  address       String
  neighborhood  String
  city          String
  state         String
  cep           String

  negotiation   NegotiationType

  phone         String
  email         String
  notes         String?

  collections   Collection[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([state, city, neighborhood])
  @@index([negotiation])

}

model Collection {
  id            String    @id @default(uuid())
  name          String    @unique
  contacts      Contact[]
}